on_check_lose= {
	once_per_turn = yes
	utility = 1
	scope = inquisitor_resources.markers.fit(current_date > 0 and not has_marker(lost))
	action = {
		if(sanity = 0)= {
			lose = you_in_the_cult_now
			markers.set_marker = lost
		}

		if(influence = 0) = {
			lose = they_fired_you
			markers.set_marker = lost
		}
	}
}

