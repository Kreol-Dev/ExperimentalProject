country_cities = 
{
	scope = markers.fit(has_marker(country_node))
	utility = 1
	once_per_object = yes
	action = 
	{

		create = country
		repeat(random(4,10)) = 
		{
			generate(city_obj) = 
			{
				entity = {
					position = vec(random(10, 90), random(10, 90))
				}
				place = {
					size = 100
				}
				people = yes
				named = {
					set(main_name, 0) = random_name(country_name)
				}
				interactables = yes
				interactable = yes
				city ={
					size = random(3, 6)
					of = root
				}

			}
		}
	}
}
