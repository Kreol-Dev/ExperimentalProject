burn = 
{
	is_interaction = yes
	tooltip = "burn this heretic"
	scope = noble
	utility = influence * 0.01 - noble.influence
	action = 
	{
		is_cultist = no
		cultist = {
			is_cultist = yes
			influence = influence + noble.influence * 10
			notify = "it was a cultist!"
		}
		if(not is_cultist).influence = influence - noble.influence * 20
		destroy = noble
	}
}



