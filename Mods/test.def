	utility = 1
	action = {
		place = {
			size = 5
			repeat(random(1,4)) = {
				generate(ag) = {
					entity = {
						on_destruction = {
							entity.place_marker.current_place.detach = agent
						}
					}
					agent = yes
					human = {
						age = random(20, 45)
					}
					named = {
						set("prefix", 0) = "Agent: "
						set("main_name", 1) = random_name
					}
				}

				attach = ag.agent
			}
		}
	}
}

