camps_filler = 
{
	scope = has_camp
	action = 
	{
		camp.size = 5
		camp = 
		{
			if(people.has_camp.fit(camp.size = 0).has_person_fit_test.person_fit_test.some_value() > 0 and not root.entity.dead) = 
			{
				repeat(size) = 
				{
					generate(party_member) =
					{
						person = yes
						named = yes
					}
					add_to(people) = party_member.person
				}
			}
		}
		
	} 
}

world_filler = 
{
	scope = has_world.has_space
	action = 
	{
		space = 
		{
			repeat(5) = 
			{
				generate(party_member) =
				{
					person = yes
					entity = yes
				}
				place = party_member

			}
		}
		
		
	} 
}