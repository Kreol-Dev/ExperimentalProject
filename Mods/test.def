locations_filler =
{
	scope = space.fit(places = 0)
	utility = 1
	action = 
	{
		space = 
		{
			size = 5
			repeat(random(1,4)) = 
			{
				generate(loc) = 
				{
					entity = 
					{
						on_destruction = 
						{
							entity.space_marker.current_space.detach = place
						}
					}
					place = yes
					named = 
					{
						set("main_name", "_1") = "Some location"
					}
				}

				attach = loc.place
			}
		}
	}
}

named_ui = 
{
	scope = card.fit(card.showed_object.fit(has(named)) and not has(named_ui_marker))
	utility = 1 
	action = 
	{
		create = named_ui_marker
		create = text_field
		text_field = 
		{
			set = root.card.showed_object.named.get("main_name")
		}
	}
}