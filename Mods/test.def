camps_filler = 
{
	scope = has_camp
	action = 
	{
		if(people.count = 0 and not entity.dead) = 
		{
			camp = 
			{
				size = 5
				repeat(size) = 
				{
					generate(party_member) =
					{
						person = yes
						named = yes
					}
					add_to(people) = party_member.person
				}

			}
		}
		
	} 
}