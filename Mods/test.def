camps_filler = 
{
	scope = has_camp
	action = 
	{
		camp.size = 5
		camp = 
		{
			if(people.has_person_fit_test > 0 and not root.entity.dead) = 
			{
				repeat(size) = 
				{
					generate(party_member) =
					{
						person = yes
						named = yes
					}
					add_to(people) = party_member.person
				}
			}
		}
		
	} 
}