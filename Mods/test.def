camps_filler = 
{
	scope = has_camp
	utility = camp.size
	action = 
	{
		camp.size = dsix
		camp = 
		{
			if(people.has_camp.fit(size = 0).has_person_fit_test.person_fit_test.some_value() > random(3) and not entity.dead) = 
			{
				repeat(size) = 
				{
					generate(party_member) =
					{
						person = yes
						named = yes
					}
					add_to(people) = party_member.person
				}
			}

			people = 
			{
				name = "Name McNamesky"
			}
		}
		
	} 
}

