beaten_as_a_kid =
{
	once_per_turn = yes
	once_per_object = yes
	category = person_generation
	only_max_utility = yes
	scope = markers.personality.aged.fit(cur_age < 6)
	utility = 1
	action = 
	{
		spawn(beaten_as_a_kid).targeted_event.target = root
		aged.cur_age = cur_age + 3
		personality =
		{
			cruel = cruel + 0.1
			reckless = reckless + 0.1
		}
	}
}

